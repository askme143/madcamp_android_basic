<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7/10"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/time"
        app:layout_constraintStart_toStartOf="@id/centerDot"
        app:layout_constraintEnd_toEndOf="@id/centerDot"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00"
        app:layout_constraintStart_toStartOf="@id/centerDot"
        app:layout_constraintEnd_toEndOf="@id/centerDot"
        app:layout_constraintBottom_toTopOf="@id/centerDot"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/centerDot"
        android:src="@drawable/circle_time_progress"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pikachu, Ryan"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/centerDot"
        app:layout_constraintStart_toStartOf="@id/centerDot"
        app:layout_constraintEnd_toEndOf="@id/centerDot"
        />

</androidx.constraintlayout.widget.ConstraintLayout>